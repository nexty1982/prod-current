{
  "name": "orthodoxmetrics-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:clean": "rimraf dist",
    "build:ts": "tsc -p tsconfig.json && node scripts/fix-router-exports.js",
    "build:copy": "node scripts/build-copy.js",
    "build:verify": "node scripts/verify-build.js",
    "build:verify:interactive": "node scripts/verify-interactive-reports-build.js",
    "build:verify:db-imports": "node scripts/verify-database-imports.js",
    "build:verify:imports": "node scripts/import-check.js",
    "build:post-library": "node scripts/post-build-library.js",
    "build:flush-sessions": "node scripts/flush-sessions.js",
    "build": "npm run build:clean && npm run build:ts && npm run build:copy && npm run build:post-library && npm run build:verify && npm run build:verify:imports && npm run build:flush-sessions",
    "build:frontend": "cd ../front-end && npm run build",
    "build:all": "node scripts/build-all.js",
    "build:deploy": "npm run build:verify:imports && node scripts/build-all.js",
    "build:smart": "node scripts/build-smart.js",
    "build:deploy:smart": "node scripts/build-smart.js --restart",
    "build:history": "node scripts/build-history.js history",
    "build:history:show": "node scripts/build-history.js history 20",
    "dev": "tsx watch src/index.ts",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:debug": "npx playwright test --debug",
    "sync-tasks": "npx ts-node scripts/sync-tasks.ts"
